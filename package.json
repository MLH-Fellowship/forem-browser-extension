{
  "name": "forem-browser-extension",
  "version": "1.0.0",
  "description": "This is a fairly functional work-in-progress. Let's try to keep it clean and functionally minimal as we evolve it.",
  "main": "content.js",
  "scripts": {
    "clean": "rimraf dist",
    "predev": "npm run clean",
    "dev": "cross-env NODE_ENV=development parcel watch src/content.js src/hotReload.js ",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production parcel build src/content.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forem/forem-browser-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "browser-extension"
  ],
  "author": "The Forem Team",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/forem/forem-browser-extension/issues"
  },
  "homepage": "https://github.com/forem/forem-browser-extension#readme",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "crx-hotreload": "^1.0.4",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{scss,css}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write --prose-wrap always"
    ],
    "*.svg": [
      "svgo --disable=removeViewBox --pretty"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "static/development",
        "env": "development"
      },
      {
        "staticPath": "static/production",
        "env": "production"
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
